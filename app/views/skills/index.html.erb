<section>
	<h2>Skills</h2>

	<% if @skills.any? %>
		<ul>
			<% @skills.each do |skill| %>
				<li><%= link_to skill.name, skill_path(skill) %></li>
			<% end %>
		</ul>
	<% else %>
		<p>I have no damn skills right now.</p>
	<% end %>
	
	<%= link_to "Add Skill", new_skill_path, :class => "btn btn-primary" %>
</section>